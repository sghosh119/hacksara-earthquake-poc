# Hacksara Earthquake Detection Configuration

# Detection Parameters
DETECTION_PGA_THRESHOLD=0.02
DETECTION_PGA_CONFIRMATION=0.05
DETECTION_STA_LTA_THRESHOLD=3.5
DETECTION_DURATION_MIN_SECONDS=3.0

# Signal Processing
SAMPLE_RATE_HZ=104
BANDPASS_LOW_HZ=0.5
BANDPASS_HIGH_HZ=5.0

# Audio Alerts
ENABLE_AUDIO_ALERTS=true
AUDIO_ALERT_MESSAGE="Earthquake 5.1 or greater detected. Please manually shut off all gas valves in home and check PGE for emergency updates."

# Database
DATABASE_URL=sqlite:///data/earthquake_detections.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/earthquake_detector.log

# Development
DEBUG_MODE=false
SAVE_DETECTION_PLOTS=true
